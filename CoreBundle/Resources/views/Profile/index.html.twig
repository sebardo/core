{% extends core['extended_layout'] ? core['extended_layout'] : 'CoreBundle:Base:base.layout.html.twig' %}

{% block breadcrumb %}
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="#">Perfil</a></li>
            <li class="active"><a href="#">Detalle</a></li>
        </ol>
    </div>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row core-row container-profile" >
                <div class="col-md-3 col-sm-3 col-xs-12 paddingForFloat"> <!-- required for floating -->
                    <div class="profile-img ">
                        <img  src="{{ get_profile_image() }}">
                        {% include 'CoreBundle:Profile:_profile.image.upload.html.twig' %}
                    </div>
                    {{ include('CoreBundle:Profile/Block:_sidebar.html.twig') }}
                </div>

                <div class="col-md-9 col-sm-9 col-xs-12 tabs-content">
                    <h1 class="title">
                        {{app.user.fullName}}
                    </h1>
                    <div class="subtitle-section">
                        {% include 'CoreBundle:Base:alert.messages.html.twig'%}	
                        {% if not app.user.isActive  %}
                            <div class="alert alert-warning" role="alert">
                                <i class="ion-alert-circled"></i> {{  'validate.message' | trans}}
                            </div>
                        {% endif  %}
                    </div> 
                    <!-- Tab panes -->
                    <div class="tab-content col-xs-12">
                        <div class="tab-pane {{ not app.request.get('billing') and 
                                                not app.request.get('delivery') and 
                                                not app.request.get('transactions')? 'active' }}" id="profile_tab">
                            <div class="portlet box custom">
                                <div class="portlet-body profile">
                                    <div id="content" class="account profile-content">
                                        <h3>{{ 'account.user.profile' | trans }}</h3>
                                        <div>
                                            <p><b>{{ 'account.email.singular' | trans }}</b>: {{ app.user.email }}</p>
                                            <p><b>{{ 'account.name' | trans }}</b>: {{ app.user.name }} {{ app.user.surnames }}</p>
                                        </div>
                                        <div class="profile-buttons">
                                            <a href="javascript:void(0);" id="edit-profile" class="btn btn-core"><span class="ion-edit"></span> {{ 'account.edit.profile' | trans }}</a>
                                            <a href="javascript:void(0);" id="change-password" class="btn btn-core"><span class="ion-locked"></span> {{ 'account.password.change' | trans }}</a>
                                        </div>            
                                    </div>
                                    <div id="edit_content" class="edit_account">
                                        {{ include ("CoreBundle:Profile/Block:_form.profile.html.twig" , { form: get_profile_form() }) }}
                                    </div>
                                    <div  id="pass_content"  class="edit_pass">
                                        {{ include ('CoreBundle:Profile/Block:_form.password.html.twig', { form: get_password_form() }) }}
                                   </div>
                                </div>
                            </div>
                        </div>
                                   
                        <div class="tab-pane {{ app.request.get('billing') ? 'active' }}" id="billing_tab">
                            <div class="portlet box custom">
                                <div class="portlet-body">
                                     <div id="billing">
                                        {% include 'CoreBundle:Base:alert.messages.html.twig'%}
                                        <div class="container-table-billing">
                                            <h3>{{ 'account.billing.info' | trans }}</h3>
                                            {{ include('EcommerceBundle:Profile:Billing/billing.form.html.twig') }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane {{ app.request.get('delivery') ? 'active' }}" id="delivery_tab">
                            <div class="portlet box custom">
                                <div class="portlet-body">
                                    {% include 'CoreBundle:Base:alert.messages.html.twig'%}
                                    <div class="delivery-content">
                                            {% include 'EcommerceBundle:Profile/Delivery:show.html.twig'%}
                                    </div>
                                    <div class="delivery-new" style="display: none">
                                        <h3>{{ 'account.address.add' | trans }}</h3>
                                        {{ include('EcommerceBundle:Profile:Delivery/delivery.form.html.twig') }}
                                    </div>
                                    <a id="new-delivery" href="javascript:void(0);" class="btn btn-core add-delivery">{{ 'account.address.add' | trans }}</a>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane {{ app.request.get('transactions') ? 'active' }}" id="transactions_tab">
                            <div class="portlet box custom">
                                <div class="portlet-body">
                                    <div class="container-table-transactions">
                                        {% if get_transactions() is empty %}
                                            {{ 'transaction.none' | trans }}
                                        {% else %}
                                            {% include 'EcommerceBundle:Profile/Transaction:_content.html.twig'%}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                                    
                        <div class="tab-pane {{ app.request.get('adverts') ? 'active' }}" id="adverts_tab" style="padding-left: 0">
                            <div class="portlet box custom">
                                <div class="portlet-body">
                                    <div class="container-table-adverts">
                                        {% if get_actor_adverts() is empty %}
                                            {{ 'advert.none' | trans }}
                                        {% else %}
                                            {% include 'EcommerceBundle:AdvertFront:_content.html.twig'%}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                                    
                                    
                    </div>
                </div>  
                <!--END TABS-->
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
            'bundles/core/less/pages/profile.less'
            'bundles/admin/plugins/bootstrap-plugins/bootstrap.vertical-tabs.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

            
{% endblock %}



