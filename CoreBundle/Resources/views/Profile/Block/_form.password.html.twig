<h3>{{ 'profile.change_password' | trans }}</h3>

{{ form_start(form, {
                        'action': path('core_actor_changepassword'), 
                        'method': 'post',
                        'attr': {'class': 'form-horizontal'}
                        }) }}
   {{ form_errors(form) }}
    <div class="form-group">
        <label class="control-label col-sm-4">{{'profile.password.current' | trans}}</label>
        <div class="col-sm-8">
          {{ form_widget(form.password_old, {attr: {'class': 'form-control'} }) }}
        </div>
    </div>
           
    <div class="form-group">
        <label class="control-label col-sm-4">{{'profile.password.new' | trans}}</label>
        <div class="col-sm-8">
          {{ form_widget(form.password.first, {attr: {'class': 'form-control'} }) }}
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-4">{{'profile.password.new.repeat' | trans}}</label>
        <div class="col-sm-8">
           {{ form_widget(form.password.second, {attr: {'class': 'form-control'} }) }}
        </div>
    </div>
       
    {{ form_rest(form) }}
  
    <div class="profile-buttons">
        <a href="javascript:void(0);" id="back_pass" class="btn btn-core "><i class="ion-reply"></i> <span>{{ 'back' | trans }}</span></a>
        <button type="submit" class="btn btn-core pull-right saveProfile"> <i class="ion-checkmark"></i> {{ 'save' | trans }}</button> 
    </div> 
{{ form_end(form) }}