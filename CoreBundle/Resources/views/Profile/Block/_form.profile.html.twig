<div id="content" class="account">
    <h3>{{ 'profile.edit' | trans }}</h3>
     {{ form_start(form, {
                        'action': path('core_actor_profile'), 
                        'method': 'post',
                        'attr': {'class': 'form-horizontal profile-edit-form'}
                        }) }}      
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">{{'profile.name' | trans}}</label>
            <div class="col-sm-10">
              {{ form_widget(form.name, {attr: {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">{{'profile.surnames' | trans}}</label>
            <div class="col-sm-10">
              {{ form_widget(form.surnames, {attr: {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="email">{{'profile.email' | trans}}</label>
            <div class="col-sm-10">
              {{ form_widget(form.email, {attr: {'class': 'form-control'} }) }}
            </div>
        </div>
 
        {{ form_rest(form) }}

        <div class="profile-buttons">
            <a href="javascript:void(0);"  class="btn btn-core profile-back"><i class="ion-reply"></i> <span>{{ 'back' | trans }}</span></a>
            <button type="submit" class="saveProfile btn btn-core pull-right"> <i class="ion-checkmark"></i> {{ 'save' | trans }}</button> 
        </div>
        
     {{ form_end(form) }}
</div>