{% block extends %}
{{ "{% extends twig_global.getParameter('extended_layout_admin') ? twig_global.getParameter('extended_layout_admin') : 'AdminBundle:Base:layout.html.twig' %}" }}
{% endblock extends %}
{{ "{% set uniqid = uniqid() %}" }}
{% block body %}
{{ "{% block section %}" }}{{ entity_pluralized }}{{ "{% endblock %}" }}
{{ "{% block content %}" }}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "{{ '"~entity_pluralized~"' | trans }}" }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ "{{ path('admin_default_index') }}" }}"> <i class="ion-home"></i>  {{ "{{ 'home' | trans }}" }}</a></li>
        <li><a href="javascript:">{{ "{{ 'dashboard' | trans }}" }}</a></li>
        <li><a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}">{{ "{{ '"~entity_pluralized~"' | trans }}" }}</a></li>
      </ol>
    </section>
      
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
          {{ "{{ include ('CoreBundle:Base:alert.messages.html.twig') }}" }}
            
          <div class="box">
            <div class="box-body">
                {% if 'new' in actions -%}
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_new') }}" }}" class="btn btn-success btn-flat">
                                {{ "{{ 'add.new'| trans }}" }}<i class="ion-plus"></i>
                        </a>
                    </div>
                </div>
                {%- endif %}
                
                <table class="table table-striped table-bordered table-hover" id="{{ "{{ uniqid }}" }}-table">
                    <thead>
                    <tr>
                        {%- for field, metadata in fields %}
                            
                        <th>{{ field|capitalize }}</th>
                        {%- endfor %}
                        
                        <th></th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </section>     
                
{{ "{% endblock %}" }}

{{ "{% block javascripts %}" }}
    {{ "{{ parent() }}" }}
    
    <script>
        var table_columns = [
    {%- for field, metadata in fields %}
        {%- if loop.first and ('show' in actions) %}
            {
                "mData": function (source) {
                    return '<a href="' + source.{{ identifier }} + '">' + source.{{ identifier }} + '</a>';
                }
            },
        {%- elseif metadata.type in ['datetime'] %}
            {
                "mData": function (source) {
                    var arrDate = source.{{field}}.date.split('.');
                    return arrDate[0];
                }
            },
        {%- elseif metadata.type in ['boolean'] %}
            {        
                "mData": function(source) {
                    var code = '';
                    if (true == source.{{field}}) {
                        code = '<i id="' + source.id + '-{{field}}" onclick="{{field}}(' + source.id + ', \'/admin/{{ entity_singularized  }}/' + source.id + '/{{field}}\')" style="font-size:25px;cursor:pointer;color:#00a65a" class="disable fa fa-check-circle-o" aria-hidden="true"></i>';
                    } else {
                        code = '<i id="' + source.id + '-{{field}}" onclick="{{field}}(' + source.id + ', \'/admin/{{ entity_singularized  }}/' + source.id + '/{{field}}\')" style="font-size:25px;cursor:pointer;color:#dd4b39" class="enable fa fa-circle-o" aria-hidden="true"></i>';
                    }
                    return code;
                }
            },
        {%- else %}
            { "mData": "{{  field }}" },
        {%- endif %}
        {%- if loop.last %}
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '/edit" class="btn btn-primary btn-xs btn-flat"><i class="ion-compose"></i> {{ "{{ 'edit' | trans }}" }}</a> ';
                }
            }
        {%- endif %}
    {%- endfor %}
        ];

        jQuery(document).ready(function() {
            TableManaged.init(
                '#{{ "{{ uniqid }}" }}-table',
                '{{ "{{ url('" ~ route_name_prefix ~"_listjson') }}" }}',
                [],
                table_columns,
                '{{ "{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}" }}');
        });
    </script>
    
{{ "{% endblock %}" }}

{% endblock body %}
