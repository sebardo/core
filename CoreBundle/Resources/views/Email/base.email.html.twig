    {{ include('CoreBundle:Email:_header.html.twig') }}

    <p style="padding:0 0 20px 0; margin:0;">
        {{ 'contact.email.message' | trans({ '%app_name%': core.name }) }}
    </p>

    <p style="padding:0 0 20px 0; margin:0;">
        Nombre:  {{params.name}}
    </p>
    <p style="padding:0 0 20px 0; margin:0;">
        Email: {{params.email}}
    </p>
    <p style="padding:0 0 20px 0; margin:0;">
