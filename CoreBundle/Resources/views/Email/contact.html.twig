{% block subject %}
{% spaceless %}
    {{ 'Contacto: ' }}
    {% if 'complaint' == type %}
        {{ 'contact.type.complaint' | trans }}
    {% elseif 'suggestion' == type %}
        {{ 'contact.type.suggestion' | trans }}
    {% else %}
        {{ 'contact.type.other' | trans }}
    {% endif %}
{% endspaceless %}
{% endblock %}

