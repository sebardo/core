{% form_theme form 'CoreBundle:Form:base.fields.html.twig' %}

{# Form class attr #}
{% set form_class = ''  %}
{%if params.form_class is defined and params.form_class !=''%}
    {% set form_class = params.form_class %}
{% endif %}

{# Class for each input #}
{% set input_class = '' %}
{%if params.input_class is defined and params.input_class !=''%}{% set input_class = params.input_class%}{% endif %}
               
{{ form_start(form, {
                    'action': path('register'), 
                    'method': 'post', 
                    'attr': {'class': 'register-form '~form_class}
                    }) }}
    {{ form_errors(form) }}
    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label hidden">{{ 'signup.email' | trans }}</label>
            <div class="">
                {{ form_widget(form.actor.email, { 'attr': {'class': 'form-control '~input_class, 'placeholder':  'signup.email' | trans  } } ) }}
                {{ form_errors(form.actor.email) }}
            </div>
        </div>
    </div>  
   
    <div class="col-md-6 ">
        <div class="form-group">
            <label class="control-label hidden">{{ 'signup.names' | trans }}</label>
            <div class="">
                {%if params.input_class is defined and params.input_class !=''%}{% set input_class = params.input_class%}{% endif %}
                {{ form_widget(form.actor.name, { 'attr': {'class': 'form-control '~input_class, 'placeholder': 'signup.names' | trans } }) }}
                {{ form_errors(form.actor.name) }}
            </div>
        </div>    
    </div>  
    <div class="col-md-6 last">
        <div class="form-group">
            <label class="control-label hidden">{{ 'signup.lastnames' | trans }}</label>
            <div class="">
                {{ form_widget(form.actor.surnames, { 'attr': {'class': 'form-control '~input_class, 'placeholder': 'signup.lastnames' | trans } }) }}
                {{ form_errors(form.actor.surnames) }}
            </div>
        </div>
    </div>  
    <div style="clear: both"></div>
    <div class="col-md-12">

        <div class="form-group">
            <label class="control-label hidden">{{ 'signup.password' | trans }}</label>
            <div class="">
                {{ form_widget(form.actor.password, { 'attr': {'class': 'form-control '~input_class, 'placeholder': 'signup.password' | trans } } ) }}</div>
                {{ form_errors(form.actor.password) }}
        </div>

    </div>  
    <div class="col-md-12">
        <div class="checkboxes">
            {%if params.icheck_class is defined and params.icheck_class !=''%}{% set icheck_class = params.icheck_class %}{% else %}{% set icheck_class = 'minimal' %}{% endif %}
            {{ form_widget(form.actor.newsletter, {'attr': {'class': icheck_class} }) }} {{ 'signup.news' | trans }}<br/>
            {{ form_widget(form.terms, { 'attr': {'class': icheck_class} }) }}
            {% include 'CoreBundle:Registration/Block:terms.modal.html.twig' %}
        </div>
        <input id="register-button-submit" type="submit" value="{{ 'signup.second' | trans }}" class="btn btn-core pull-right {%if params.button_submit_class is defined and params.button_submit_class !=''%}{{params.button_submit_class}}{% endif %}"/> 
    </div>        

    {{ form_rest(form) }}
{{ form_end(form) }}

