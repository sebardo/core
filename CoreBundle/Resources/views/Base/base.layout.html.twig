<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% block meta_viewport %}
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% endblock %}
        <title>{% block title %}{% if page_title is defined %} {{ page_title }} &raquo; {% endif %}Website{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>

        <!-- Google fonts -->
        {% if get_fonts() | length > 0%}
        <link href='http://fonts.googleapis.com/css?family={{get_fonts()}}' rel='stylesheet' type='text/css'>
        {% endif %}
        <!--  Bootstrap CSS file 
	'bundles/core/less/custom.bootstrap.less'
        -->
        {% block stylesheets %}

            {% stylesheets
                'bundles/core/less/custom.bootstrap.less'
                'bundles/admin/plugins/iCheck/minimal/_all.css'
                'bundles/admin/plugins/ionicons-2.0.1/css/ionicons.min.css'
                'bundles/admin/plugins/font-awesome-4.6.3/css/font-awesome.min.css'
                'bundles/core/css/fonts.css'
                'bundles/admin/plugins/flagstrap/dist/css/flags.css'
                'bundles/core/less/main-full.less'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}

        {% endblock %}

        {% javascripts
            'bundles/core/js/jquery-1.11.1.min.js'
            'bundles/admin/plugins/bootstrap-3.3.6/js/bootstrap.min.js'
            'bundles/admin/plugins/iCheck/icheck.min.js'
            'bundles/admin/plugins/flagstrap/dist/js/jquery.flagstrap.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        
        {% block head %}{% endblock %}
    </head>

    {% block body %}
    <body class="core-body {% block body_class %}{% endblock %}">
        
        {% block container_header %}
              <div class="container-fluid">
                <div class="row core-row">
                    {% block header %}{% include 'CoreBundle:Base:header.html.twig' %}{% endblock %}
                </div>
            </div>
        {% endblock %}
        
        {% block container_content %}
        <div class="container">
            <div class="row core-row">
                {% block content_header %}{% endblock %}
                {% block content %}{% endblock %}
                {% block content_footer %}{% endblock %}
            </div>
        </div>
        {% endblock %}
        {% block container_footer %}
            <div class="container">
                <div class="row core-row">
                    {% block footer %}{% endblock %}
                </div>
            </div>     
        {% endblock %}
        
        {% block javascripts %}
            
            <script>
                //iCheck for checkbox and radio inputs
                $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
                  checkboxClass: 'icheckbox_minimal-blue',
                  radioClass: 'iradio_minimal-blue'
                });
                
                $(document).ready(function(){
                    
                });
            </script>
        {% endblock %}
    </body>
    {% endblock %}
</html>
