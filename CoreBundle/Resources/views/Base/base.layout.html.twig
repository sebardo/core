<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% block meta_viewport %}
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% endblock %}
        <title>{% block title %}{% if page_title is defined %} {{ page_title }} &raquo; {% endif %}Website{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>

        {% block stylesheets %}

            {% stylesheets
                'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
                'bundles/core/css/fonts.css'
                'bundles/core/less/main-full.less'
                'bundles/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}

        {% endblock %}

        {% javascripts
            'bundles/core/js/jquery-1.11.1.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        
        {% block head %}{% endblock %}
    </head>

    {% block body %}
    <body class="core-body">
        <div class="container">
            <div class="row core-row">
                {% block content %}{% endblock %}
            </div>
        </div>
        
        {% block footer %}{% endblock %}
        
        {% block javascripts %}
        {% endblock %}
    </body>
    {% endblock %}
</html>
