<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {% block meta_viewport %}
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        {% endblock %}
        <title>{% block title %}{% if page_title is defined %} {{ page_title }} &raquo; {% endif %}Website{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>

        {% block stylesheets %}

            {% stylesheets
                'bundles/admin/plugins/bootstrap-3.3.6/css/bootstrap.min.css'
                'bundles/admin/plugins/iCheck/minimal/_all.css'
                'bundles/admin/plugins/ionicons-2.0.1/css/ionicons.min.css'
                'bundles/admin/plugins/font-awesome-4.6.3/css/font-awesome.min.css'
                'bundles/core/css/fonts.css'
                'bundles/admin/plugins/flagstrap/dist/css/flags.css'
                'bundles/core/less/main-full.less'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}

        {% endblock %}

        {% javascripts
            'bundles/core/js/jquery-1.11.1.min.js'
            'bundles/admin/plugins/bootstrap-3.3.6/js/bootstrap.min.js'
            'bundles/admin/plugins/iCheck/icheck.min.js'
            'bundles/admin/plugins/flagstrap/dist/js/jquery.flagstrap.min.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        
        {% block head %}{% endblock %}
    </head>

    {% block body %}
    <body class="core-body">
        
        {% block header %}
              
            <div class="login-header main-header-wrapper create-form-header">
                <div class="main-header-inner">
                    <a href="/" class="logo sandbox">_sandbox</a>
                    <div class="header-register text-right"><a href="/register">Sign up</a></div>
                    <div class="header-login text-right"><a href="/login">Login</a></div>
                    {% include 'CoreBundle:Base:language.html.twig' %}
                </div>
            </div>
      
        {% endblock %}
        
        {% block contianer_content %}
        <div class="container">
            <div class="row core-row">
                {% block content_header %}{% endblock %}
                {% block content %}{% endblock %}
                {% block content_footer %}{% endblock %}
            </div>
        </div>
        {% endblock %}
        {% block contianer_footer %}
            <div class="container">
                <div class="row core-row">
                    {% block footer %}{% endblock %}
                </div>
            </div>     
        {% endblock %}
        
        {% block javascripts %}
            
            <script>
                //iCheck for checkbox and radio inputs
                $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
                  checkboxClass: 'icheckbox_minimal-blue',
                  radioClass: 'iradio_minimal-blue'
                });
                
                $(document).ready(function(){
                    
                   //language selector
                   $('#select-language').flagStrap({
                        countries: {
                            "ES": "{{ 'spanish' | trans }}",
                            "GB": "{{ 'english' | trans }}",
                            "DE": "{{ 'deutsch' | trans }}"
                        },
                        buttonSize: "btn-sm",
                        buttonType: "btn-info",
                        labelMargin: "10px",
                        scrollable: false,
                        scrollableHeight: "350px",
                        placeholder: {
                            value: "",
                            text: "{{ 'select.language' | trans }}"
                        },
                        onSelect: function (value, element) {
                            if(value == 'GB') value = 'EN';
                            window.location = '/'+value.toLowerCase();
                        }
                    });  
                });
            </script>
        {% endblock %}
    </body>
    {% endblock %}
</html>
