<div class="login-header main-header-wrapper create-form-header">
    <div class="main-header-inner">
        <a href="{{ path('index')}}" class="logo sandbox">{{ core.name }}</a>
        
        {% if twig_global.checkUse('BlogBundle') %}
        <a href="{{ path('blog_blog_index')}}" class="header-item-left">{{ 'blog.singular' | trans }}</a>
        {% endif %}
        
        {% if twig_global.checkUse('EcommerceBundle') %}
        <a href="{{ path('ecommerce_checkout_index')}}" class="header-item-left">{{ 'ecommerce' | trans }}</a>
        {% endif %}
        
        {% if twig_global.checkUse('ElearningBundle') %}
        <a href="{{ path('elearning_front_elearning')}}" class="header-item-left">{{ 'elearning' | trans }}</a>
        {% endif %}
        
        {% if twig_global.checkUse('CoreExtraBundle') %}
            {% include 'CoreExtraBundle:MenuItem:front.header.html.twig' %}
        {% endif %}
        
        {{ get_languages() }}
        {% if app.user %}
            <div class="header-register text-right"><a href="/logout">{{ 'logout' | trans }}</a></div>
            <div class="header-login text-right"><a href="/profile">{{app.user.name ~' '~ app.user.lastname }}</a></div>
        {% else %}
            <div class="header-register text-right"><a href="/register">{{ 'signup.first' | trans }}</a></div>
            <div class="header-login text-right"><a href="/login">{{ 'login.short' | trans }}</a></div>
        {% endif %}
        
    </div>
</div>