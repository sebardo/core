{% extends core['extended_layout'] ? core['extended_layout'] : 'CoreBundle:Base:base.layout.html.twig' %}
{% form_theme form 'CoreBundle:Form:base.fields.html.twig' %}

{% block content %}
 
    <div class="container">
        <div class="col-sm-4"></div>  
        <div class="col-md-4 container-recovery">
            <div class="row">
                <h2 class="center">{{ 'recovery.title' | trans }}</h2>
                <hr>
                <div class="container-recovery-form">
                    {% include 'CoreBundle:Base:alert.messages.html.twig' %}
                    <span id="returnMessage" style="display: none">
                        <div class="alert alert-warning alert-recovery-password" >
                          <button type="button" class="close" data-dismiss="alert">&times;</button>
                          <strong></strong>
                        </div>
                    </span>
                    <!-- form start -->
                    {{ form_start(form, {
                                        'action': path('core_actor_recovery'), 
                                        'method': 'post', 
                                        'attr': {'class': 'form-horizontal form-row-seperated'}
                                        }) }}
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label hidden">{{ 'signup.email' | trans }}</label>
                                <div class="">
                                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':  'recovery.placeholder' | trans  } } ) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>  
                        <input type="submit" id="recoverySubmit" class="btn pull-right" value="{{ 'recovery.submit' | trans }}" />
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>     
    </div>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
 
    <script type="text/javascript">
        $(document).ready(function(){
            $('form[name="recovery_email"]').submit(function(e){
                e.preventDefault();
                var email = $('#recovery_email_email').val();

                if(email != ''){
                    $.ajax({
                        type: "POST",
                        url: "{{ path('recovery_password') }}/"+email,
                      }).done(function( data ) {
                        $('#returnMessage').show();
                        if($('#returnMessage div').length == 0){
                            var html = '<div class="alert alert-recovery-password"><button type="button" class="close" data-dismiss="alert">Ã—</button><strong></strong></div>';
                            $('#returnMessage').html(html);
                        }
                        
                        $('#returnMessage div strong').text(data.answer.message);
                        if(data.answer.status == 'success'){
                            $('#returnMessage div').removeClass('alert-warning');
                            $('#returnMessage div').addClass('alert-success');
                        }
                        if(data.answer.status == 'error'){
                            $('#returnMessage div').removeClass('alert-success');
                            $('#returnMessage div').addClass('alert-warning');
                        }
                      });
                }
            });
        });
    </script>
    
{% endblock %}