{% extends core['extended_layout'] ? core['extended_layout'] : 'CoreBundle:Base:base.layout.html.twig' %}

{% block  content %}
    <div class="col-sm-4"></div>        
    <div class="col-sm-4">
        <div class="container-login">
            <h2 class="center">{{ 'login.account' | trans }}</h2>
            <hr>
            {% if error is defined and error %}
               <div>{{ error.message }}</div>
            {% endif %}
            <form id="login-form" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                   <div>
                       <input class="form-control" type="text" name="_username" id="_username" placeholder="{{ 'login.email' | trans }}" required="required">
                   </div>
                </div>    
                <div class="form-group">
                    <div>
                        <input class="form-control" type="password" name="_password" id="_password" required="required" placeholder="{{ 'login.password' | trans }}">
                    </div>
                </div>         
                <div class="form-group row">
                    <div class="col-md-6 pull-left">
                        <input type="checkbox" class="minimal" value=""> {{ 'login.remember' | trans }}
                    </div>
                    <div class="col-md-6">  
                        <a class="pull-right" href="{{ path('core_actor_recovery') }}" title="{{ 'login.recovery' | trans }}">{{ 'login.recovery' | trans }}</a>
                    </div>   
                </div>
                <button type="submit" class="btn-core btn btn-block">{{ 'login.short' | trans }}</button>
            </form>
        </div>
    </div>
    <div class="col-sm-4"></div>               
{% endblock %}
