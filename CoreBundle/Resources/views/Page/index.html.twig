{% extends twig_global.getParameter('extended_layout_admin') ? twig_global.getParameter('extended_layout_admin') : 'AdminBundle:Base:layout.html.twig' %}
{% set uniqid = uniqid() %}
{% block section %}pages{% endblock %}
{% block content %}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ 'pages' | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ 'home' | trans }}</a></li>
        <li><a href="javascript:">{{ 'dashboard' | trans }}</a></li>
        <li><a href="{{ path('core_page_index') }}">{{ 'pages' | trans }}</a></li>
      </ol>
    </section>
      
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
          {{ include ('CoreBundle:Base:alert.messages.html.twig') }}
            
          <div class="box">
            <div class="box-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <a href="{{ path('core_page_new') }}" class="btn btn-success btn-flat">
                                {{ 'add.new'| trans }}<i class="ion-plus"></i>
                        </a>
                    </div>
                </div>                <table class="table table-striped table-bordered table-hover" id="{{ uniqid }}-table">
                    <thead>
                    <tr>                            
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Active</th>                        
                        <th></th>
                    </tr>
                    </thead>
                    <tbody></tbody>
                </table>
              </div>
          </div>
        </div>
      </div>
    </section>     
                
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
        var table_columns = [                        
            {
                "mData": function (source) {
                    return '<a href="' + source.id + '">' + source.id + '</a>';
                }
            },           
            { "mData": "title" },    
            { "mData": "description" },    
            {        
                "mData": "active",
                "mRender": function(data) {
                    var code = '';
                    if (true == data) {
                        code = '<span class="label label-success">{{ 'yes' | trans }}</span>';
                    } else {
                        code = '<span class="label label-danger">{{ 'no' | trans }}</span>';
                    }
                    return code;
                }
            },                        
            {
                "mData": function(source) {
                    return '<a href="' + source.id + '/edit" class="btn btn-primary btn-xs btn-flat"><i class="ion-compose"></i> {{ 'edit' | trans }}</a> ';
                }
            }        
        ];

        jQuery(document).ready(function() {
            TableManaged.init(
                '#{{ uniqid }}-table',
                '{{ url('core_page_listjson') }}',
                [],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}'
            );
        });
    </script>
    
{% endblock %}

