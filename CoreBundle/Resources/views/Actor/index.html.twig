{% extends "AdminBundle:Base:layout.html.twig" %}

{% block section %}actors{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "user.plural" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="javascript:">{{ "users" | trans }}</a></li>
        <li><a href="{{ path('core_actor_index') }}">{{ "user.plural" | trans }}</a></li>
      </ol>
    </section>
      
    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            
             {% include 'CoreBundle:Base:alert.messages.html.twig' %}
             
          <div class="box">
            <div class="box-body">
                <div class="clearfix">
                        <div class="btn-group">
                            <a href="{{ path('core_actor_new') }}" class="btn btn-success btn-flat">
                                {{ "add.new" | trans }} <i class="ion-plus"></i>
                            </a>
                        </div>
                    </div>
                            
                    <table class="table table-striped table-bordered table-hover" id="users-table">
                        <thead>
                        <tr>
                            <th style="width: 50px">ID</th>
                            <th>{{ "Email" | trans }}</th>
                            <th>{{ "name" | trans }}</th>
                            <th>{{ "surnames" | trans }}</th>
                            <th>{{ "image.singular" | trans }}</th>
                            <th style="width:70px;"></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
              </div>
          </div>
        </div>
      </div>
    </section>
                        
       
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var table_columns = [
            {
                "mData": function (source) {
                    return '<a href="/admin/actor/' + source.id + '">' + source.id + '</a>';
                }
            },
            { "mData": "email" },
            { "mData": "name" },
            { "mData": "surnames" },
            {
                "mData": function (source) {
                    if(source.actorImage == null) 
                        return '<img width="40"  src="/bundles/admin/img/default_profile.png" />';
                    return '<img width="40" src="/uploads/images/profile/' + source.id + '/' + source.actorImage + '" />';
                }
            },
            {
                "mData": function(source) {
                    return '<a href="/admin/actor/' + source.id + '/edit" class="btn btn-xs btn-primary btn-flat"><i class="ion-compose"></i> {{ "edit.singular" | trans }}</a> ';
                }
            }
        ];

        jQuery(document).ready(function() {
            TableManaged.init(
                '#users-table',
                '{{ url('core_actor_listjson', { actorId: app.user.id }) }}',
                [],
                table_columns,
                '{{ url('admin_default_getdatatablesi18n', { language: app.request.locale }) }}');
        });
    </script>
{% endblock %}