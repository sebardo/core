{% extends "AdminBundle:Base:layout.html.twig" %}
{% form_theme form 'AdminBundle:Form:fields.html.twig' %}

{% block section %}sliders{% endblock %}

{% block content %}
    
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{ "new.slider" | trans }}
        <small></small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="{{ path('admin_default_index') }}"> <i class="ion-home"></i>  {{ "home" | trans }}</a></li>
        <li><a href="{{ path('core_slider_index') }}">{{ "slider.plural" | trans }}</a></li>
        <li><a href="{{ path('core_slider_new') }}">{{ "new.singular" | trans }}</a></li>
      </ol>
    </section>
      
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
            <div class="box box-info">
                <!-- form start -->
                {{ form_start(form, {'action': path('core_slider_create'), 'method': 'post', 'class': 'form-horizontal form-row-seperated'}) }}
                    <div class="box-body">
                        {{ include('CoreBundle:Slider:_form.html.twig', { form: form }) }}
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-10">
                            <button type="submit" class="btn blue"><i class="icon-ok"></i> {{ "save" | trans }}</button>
                            <a href="{{ path('core_slider_index') }}" class="btn">{{ "cancel.singular" | trans }}</a>
                        </div>
                    </div><!-- /.box-footer -->
                {{ form_end(form) }}
            </div>
        </div>
    </section>
                        
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        jQuery(document).ready(function() {
        });
    </script>
{% endblock %}